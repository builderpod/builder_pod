<div class="page-header">
  <%= link_to answers_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    All Answers
  <% end %>
  <%= link_to edit_answer_path(@answer), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show answer</h1>
</div>

<dl class="dl-horizontal">
  <dt>Aid:</dt>
  <dd><%= @answer.aid %></dd>

  <dt>Answer display sequence:</dt>
  <dd><%= @answer.answer_display_sequence %></dd>

  <dt>Answer text:</dt>
  <dd><%= @answer.answer_text %></dd>

  <dt>Answer display text:</dt>
  <dd><%= @answer.answer_display_text %></dd>

  <dt>Active:</dt>
  <dd><%= @answer.active %></dd>

  <dt>Default answer:</dt>
  <dd><%= @answer.default_answer %></dd>

  <dt>Presentation type:</dt>
  <dd><%= @answer.presentation_type %></dd>

  <dt>Child questions:</dt>
  <dd><%= @answer.child_questions %></dd>

  <dt>Question:</dt>
  <dd><%= @answer.question %></dd>

</dl>
