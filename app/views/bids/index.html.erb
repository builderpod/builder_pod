


<div class="row">
  <div class="col-sm-6">
    <h1>Bids</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_bid_path, class: 'btn btn-primary' do %>
    Add New Bid
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Task</th>
            <th>Contractor</th>
            <th>Amount</th>
            <th>Start</th>
            <th>End</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @bids.each do |bid| %>
        <%= content_tag :tr, id: dom_id(bid), class: dom_class(bid) do %>
          

                      <td><%= bid.task %></td>
                      <td><%= bid.contractor %></td>
                      <td><%= bid.amount %></td>
                      <td><%= bid.start %></td>
                      <td><%= bid.end %></td>
          
          
            <td><%= link_to 'Show', bid %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
