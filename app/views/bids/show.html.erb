<div class="page-header">
  <%= link_to bids_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    All Bids
  <% end %>
  <%= link_to edit_bid_path(@bid), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show bid</h1>
</div>

<dl class="dl-horizontal">
  <dt>Task:</dt>
  <dd><%= @bid.task %></dd>

  <dt>Contractor:</dt>
  <dd><%= @bid.contractor %></dd>

  <dt>Amount:</dt>
  <dd><%= @bid.amount %></dd>

  <dt>Start:</dt>
  <dd><%= @bid.start %></dd>

  <dt>End:</dt>
  <dd><%= @bid.end %></dd>

</dl>
