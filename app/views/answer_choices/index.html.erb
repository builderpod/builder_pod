


<div class="row">
  <div class="col-sm-6">
    <h1>Answer_choices</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_answer_choice_path, class: 'btn btn-primary' do %>
    Add New Answer choice
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Answer</th>
            <th>Question</th>
            <th>Task</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @answer_choices.each do |answer_choice| %>
        <%= content_tag :tr, id: dom_id(answer_choice), class: dom_class(answer_choice) do %>
          

                      <td><%= answer_choice.answer %></td>
                      <td><%= answer_choice.question %></td>
                      <td><%= answer_choice.task %></td>
          
          
            <td><%= link_to 'Show', answer_choice %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
