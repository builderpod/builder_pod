<%= form_with(model: contractor, local: true) do |form| %>
  <% if contractor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contractor.errors.count, "error") %> prohibited this contractor from being saved:</h2>

      <ul>
      <% contractor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :id %>
    <%= form.number_field :id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :haid %>
    <%= form.number_field :haid, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :website %>
    <%= form.text_field :website, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :rating %>
    <%= form.text_field :rating, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :review_count %>
    <%= form.number_field :review_count, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :telephone %>
    <%= form.text_field :telephone, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :street_address %>
    <%= form.text_field :street_address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :locality %>
    <%= form.text_field :locality, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :region %>
    <%= form.text_field :region, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :postal_code %>
    <%= form.text_field :postal_code, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :longitude %>
    <%= form.text_field :longitude, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :latitude %>
    <%= form.text_field :latitude, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if contractor.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', contractor, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if contractor.persisted? %>
      <%= link_to "Cancel", contractor, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", contractors_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
